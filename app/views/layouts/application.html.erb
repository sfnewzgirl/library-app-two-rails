<!DOCTYPE html>
<html>
  <head>
    <title>LibraryAppTwo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <% if current_member %>
        <li><%= link_to "Profile", member_path(current_member) %></li>
        <li><%= link_to "Log Out", logout_path %></li>
      <% else %>
        <li><%= link_to "Create Account", new_member_path %></li>
        <li><%= link_to "Log In", login_path %></li>
      <% end %>
    </ul>

    <% flash.each do |name, msg| %>
    <p> <%= name.capitalize %> : <%= msg %> </p>
    <% end %>

    <%= yield %>
  </body>
</html>
